# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/coreauth
DATABASE_MAX_CONNECTIONS=10

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Server Configuration
HOST=0.0.0.0
PORT=8000
RUST_LOG=info

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRY=3600      # 1 hour in seconds
JWT_REFRESH_TOKEN_EXPIRY=2592000  # 30 days in seconds

# Email Configuration (Mailhog for Testing)
SMTP_HOST=datacore.lan
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@coreauth.dev
SMTP_FROM_NAME=CoreAuth
# Mailhog Web UI: https://mailhog.imys.in

# SMS Configuration (SMPP Gateway for Testing)
SMS_ENABLED=true
SMS_PROVIDER=smpp
SMPP_HOST=datacore.lan
SMPP_PORT=2775
SMPP_SYSTEM_ID=test_client
SMPP_PASSWORD=password
SMPP_SYSTEM_TYPE=
SMPP_SOURCE_ADDR=CoreAuth
# Alternative domain: sms.imys.in

# OAuth/OIDC Configuration (for Social Login - Future)
# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/callback/google

# GitHub OAuth
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=http://localhost:8000/api/auth/callback/github

# Microsoft OAuth
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_REDIRECT_URI=http://localhost:8000/api/auth/callback/microsoft

# Application Settings
APP_NAME=CoreAuth
APP_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# Security Settings
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_SPECIAL=false

# MFA Settings
MFA_ISSUER=CoreAuth
TOTP_ALGORITHM=SHA1
TOTP_DIGITS=6
TOTP_PERIOD=30

# Account Lockout Settings
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# Session Settings
SESSION_TIMEOUT_MINUTES=30
REMEMBER_ME_DAYS=30

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOW_CREDENTIALS=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
