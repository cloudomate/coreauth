<%- include('header') %>
<nav class="text-sm text-gray-500 mb-4">
  <a href="/workspaces" class="hover:text-indigo-600">Workspaces</a>
  <span class="mx-2">/</span>
  <a href="/workspaces/<%= workspace.id %>" class="hover:text-indigo-600"><%= workspace.name %></a>
  <span class="mx-2">/</span>
  <a href="/workspaces/<%= workspace.id %>/resources/<%= resourceType %>" class="hover:text-indigo-600"><%= typeConfig.plural %></a>
  <span class="mx-2">/</span>
  <span class="text-gray-900">New</span>
</nav>

<div class="max-w-xl">
  <h1 class="text-2xl font-bold text-gray-900 mb-6">New <%= typeConfig.label %></h1>

  <form method="POST" action="/workspaces/<%= workspace.id %>/resources/<%= resourceType %>" class="space-y-5">
    <div>
      <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
      <input type="text" name="name" id="name" required
        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
        placeholder="<%= typeConfig.label %> name">
    </div>

    <% typeConfig.fields.forEach(function(field) { %>
    <div>
      <label for="<%= field.name %>" class="block text-sm font-medium text-gray-700 mb-1"><%= field.label %></label>
      <% if (field.type === 'select') { %>
      <select name="<%= field.name %>" id="<%= field.name %>"
        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
        <% field.options.forEach(function(opt) { %>
        <option value="<%= opt %>" <%= opt === field.default ? 'selected' : '' %>><%= opt %></option>
        <% }) %>
      </select>
      <% } else if (field.type === 'number') { %>
      <input type="number" name="<%= field.name %>" id="<%= field.name %>"
        value="<%= field.default || '' %>"
        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
      <% } else { %>
      <input type="text" name="<%= field.name %>" id="<%= field.name %>"
        value="<%= field.default || '' %>"
        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
      <% } %>
    </div>
    <% }) %>

    <div class="flex gap-3 pt-2">
      <button type="submit" class="px-4 py-2 bg-indigo-600 text-white rounded-lg text-sm font-medium hover:bg-indigo-700 transition-colors">
        Create <%= typeConfig.label %>
      </button>
      <a href="/workspaces/<%= workspace.id %>/resources/<%= resourceType %>"
         class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg text-sm font-medium hover:bg-gray-200 transition-colors">
        Cancel
      </a>
    </div>
  </form>

  <div class="mt-6 p-3 bg-gray-50 rounded-lg border border-gray-200 text-xs text-gray-500">
    <strong>FGA Roles:</strong> <%= typeConfig.roles.join(' > ') %>
    <br>
    <strong>Workspace:</strong> <%= workspace.name %> â€” workspace admins automatically get owner access.
  </div>
</div>
<%- include('footer') %>
