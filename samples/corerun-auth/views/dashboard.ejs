<%- include('header') %>
<div class="flex items-center justify-between mb-6">
  <div>
    <h1 class="text-2xl font-bold text-gray-900">Dashboard</h1>
    <p class="text-sm text-gray-500 mt-1">Your cloud infrastructure overview</p>
  </div>
  <a href="/workspaces/new" class="inline-flex items-center gap-2 px-4 py-2 bg-indigo-600 text-white rounded-lg text-sm font-medium hover:bg-indigo-700 transition-colors">
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/></svg>
    New Workspace
  </a>
</div>

<% if (workspaces.length === 0) { %>
<div class="text-center py-16">
  <svg class="w-16 h-16 mx-auto text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/></svg>
  <h3 class="mt-4 text-lg font-medium text-gray-900">No workspaces yet</h3>
  <p class="mt-2 text-sm text-gray-500">Create your first workspace to start deploying infrastructure.</p>
  <a href="/workspaces/new" class="mt-4 inline-flex items-center gap-2 px-4 py-2 bg-indigo-600 text-white rounded-lg text-sm font-medium hover:bg-indigo-700 transition-colors">
    Create Workspace
  </a>
</div>
<% } else { %>

<!-- Summary stats -->
<div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
  <div class="bg-white rounded-xl border border-gray-200 p-5">
    <p class="text-sm font-medium text-gray-500">Workspaces</p>
    <p class="text-3xl font-bold text-gray-900 mt-1"><%= workspaces.length %></p>
  </div>
  <div class="bg-white rounded-xl border border-gray-200 p-5">
    <p class="text-sm font-medium text-gray-500">Compute</p>
    <p class="text-3xl font-bold text-blue-600 mt-1"><%= workspaces.reduce((s,w) => s + w.computeCount, 0) %></p>
    <p class="text-xs text-gray-400 mt-1">Instances & Functions</p>
  </div>
  <div class="bg-white rounded-xl border border-gray-200 p-5">
    <p class="text-sm font-medium text-gray-500">Storage</p>
    <p class="text-3xl font-bold text-green-600 mt-1"><%= workspaces.reduce((s,w) => s + w.storageCount, 0) %></p>
    <p class="text-xs text-gray-400 mt-1">Buckets, Volumes & DBs</p>
  </div>
  <div class="bg-white rounded-xl border border-gray-200 p-5">
    <p class="text-sm font-medium text-gray-500">Networking</p>
    <p class="text-3xl font-bold text-purple-600 mt-1"><%= workspaces.reduce((s,w) => s + w.networkCount, 0) %></p>
    <p class="text-xs text-gray-400 mt-1">VPCs, Subnets, FWs & LBs</p>
  </div>
</div>

<!-- Workspace cards -->
<h2 class="text-lg font-semibold text-gray-900 mb-3">Workspaces</h2>
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
  <% workspaces.forEach(function(ws) { %>
  <a href="/workspaces/<%= ws.id %>" class="block bg-white rounded-xl border border-gray-200 p-5 hover:border-indigo-300 hover:shadow-md transition-all">
    <div class="flex items-start justify-between">
      <h3 class="font-semibold text-gray-900 truncate"><%= ws.name %></h3>
      <span class="ml-2 flex-shrink-0 inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium
        <%= ws.role === 'admin' ? 'bg-indigo-100 text-indigo-700' : '' %>
        <%= ws.role === 'member' ? 'bg-green-100 text-green-700' : '' %>
        <%= ws.role === 'viewer' ? 'bg-gray-100 text-gray-700' : '' %>
      ">
        <%= ws.role %>
      </span>
    </div>
    <% if (ws.description) { %>
    <p class="mt-2 text-sm text-gray-500 line-clamp-2"><%= ws.description %></p>
    <% } %>
    <div class="mt-3 flex items-center gap-4 text-xs text-gray-400">
      <span class="inline-flex items-center gap-1" title="Region">
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9"/></svg>
        <%= ws.region %>
      </span>
      <span><%= ws.totalCount %> resources</span>
    </div>
    <div class="mt-3 flex gap-3 text-xs">
      <% if (ws.computeCount > 0) { %>
      <span class="text-blue-600"><%= ws.computeCount %> compute</span>
      <% } %>
      <% if (ws.storageCount > 0) { %>
      <span class="text-green-600"><%= ws.storageCount %> storage</span>
      <% } %>
      <% if (ws.networkCount > 0) { %>
      <span class="text-purple-600"><%= ws.networkCount %> network</span>
      <% } %>
    </div>
  </a>
  <% }) %>
</div>
<% } %>

<div class="mt-8 p-4 bg-indigo-50 rounded-lg border border-indigo-100">
  <h3 class="text-sm font-semibold text-indigo-900">Fine-Grained Authorization (FGA)</h3>
  <p class="mt-1 text-sm text-indigo-700">
    This cloud console uses <strong>14 resource types</strong> with deep FGA permissions.
    Workspace <strong>admins</strong> inherit ownership of all child resources.
    Workspace <strong>viewers</strong> can view all resources. Role hierarchies like
    <code class="bg-indigo-100 px-1 rounded">owner &rarr; operator &rarr; editor &rarr; viewer</code> resolve automatically via the authorization model.
  </p>
</div>
<%- include('footer') %>
