# CoreAuth Environment Configuration
# Copy this file to .env and update with your values

# Environment (development|production|test)
ENVIRONMENT=development

# Database
POSTGRES_DB=coreauth
POSTGRES_USER=coreauth
POSTGRES_PASSWORD=change-this-in-production
POSTGRES_PORT=5432
DATABASE_URL=postgresql://coreauth:change-this-in-production@postgres:5432/coreauth

# Redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# JWT Authentication
JWT_SECRET=change-this-to-a-long-random-string-min-64-chars
JWT_ACCESS_TOKEN_EXPIRY=3600
JWT_REFRESH_TOKEN_EXPIRY=2592000

# Backend API
BACKEND_HOST=0.0.0.0
BACKEND_PORT=3000
BACKEND_EXTERNAL_PORT=8000
RUST_LOG=info
BASE_URL=http://localhost:3000
APP_URL=http://localhost:8000
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
# REQUIRE_EMAIL_VERIFICATION=true                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                               

# Frontend
FRONTEND_PORT=3000
FRONTEND_URL=http://localhost:3000
VITE_API_URL=http://localhost:8000

# Email Configuration
EMAIL_PROVIDER=mailhog
EMAIL_FROM=noreply@coreauth.dev
EMAIL_FROM_NAME=CoreAuth
MAILHOG_HOST=datacore.lan
MAILHOG_PORT=1025

# For production SMTP (e.g., SendGrid, Gmail)
# EMAIL_PROVIDER=smtp
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USERNAME=apikey
# SMTP_PASSWORD=your-sendgrid-api-key

# SMS Configuration (Optional)
SMS_ENABLED=false
# SMS_PROVIDER=twilio
# TWILIO_ACCOUNT_SID=your-account-sid
# TWILIO_AUTH_TOKEN=your-auth-token
# TWILIO_FROM_NUMBER=+1234567890

# Tenant Database Isolation (for dedicated databases)
# Generate with: openssl rand -base64 32
# Required for storing encrypted database credentials for dedicated tenant databases
# TENANT_DB_ENCRYPTION_KEY=your-base64-encoded-32-byte-key
# TENANT_ROUTER_MAX_CONNECTIONS=100
# TENANT_ROUTER_CONNECTION_TTL_SECS=3600
# TENANT_DB_MAX_CONNECTIONS=10
# TENANT_DB_MIN_CONNECTIONS=1
